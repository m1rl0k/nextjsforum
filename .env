# Database connection (Docker Compose)
# DATABASE_URL="postgresql://user:password@postgres:5432/forum"

# Local development database connection (without Docker)
DATABASE_URL="postgresql://user:password@localhost:5432/forum"

# JWT Secret - Generate a strong secret in production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Next.js environment
NODE_ENV="development"

# Optional: Set to 'true' to enable debug logging
DEBUG="false"

# Image Upload Configuration
# Set to 'true' to use S3, 'false' for local storage
USE_S3_UPLOAD="false"

# S3 Configuration (only needed if USE_S3_UPLOAD=true)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME="your-bucket-name"
