# Database Configuration
# PostgreSQL (recommended for production)
DATABASE_URL="postgresql://user:password@localhost:5432/forum"
# Docker Compose PostgreSQL
# DATABASE_URL="postgresql://user:password@postgres:5432/forum"
# MySQL alternative
# DATABASE_URL="mysql://user:password@localhost:3306/forum"
# SQLite for development
# DATABASE_URL="file:./dev.db"

# JWT Authentication
# IMPORTANT: Generate a strong secret key (minimum 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG"
TOKEN_EXPIRY="7d"

# Node Environment
NODE_ENV="development"

# Application URLs
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_THIS_TO_ANOTHER_STRONG_SECRET"

# Forum Configuration
USE_DATABASE_SETTINGS="false"
FORUM_INSTALLED="false"

# File Upload Configuration
USE_S3_UPLOAD="false"
# S3_BUCKET_NAME="your-bucket-name"
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Optional: Debug logging
DEBUG="false"

# Email Configuration (SMTP)
# Required for password reset, email verification, and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_NAME="Forum Name"
SMTP_FROM_EMAIL="noreply@your-domain.com"

# Email Features
ENABLE_EMAIL_VERIFICATION="false"
ENABLE_PASSWORD_RESET="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# Security
# CSRF protection is enabled by default in production
ENABLE_CSRF_PROTECTION="true"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"
ENABLE_ERROR_TRACKING="false"

# Performance
ENABLE_CACHING="true"
CACHE_TTL="3600"

# SEO
SITE_NAME="My Forum"
SITE_DESCRIPTION="A modern forum community"
SITE_KEYWORDS="forum,community,discussion"
